<h1>User Details</h1>

<div class="admin-navigation">
  <%= link_to "â† Back to Users", admin_users_path, class: "btn btn-secondary" %>
</div>

<div class="user-details">
  <div class="detail-group">
    <label>Email:</label>
    <p><%= @user.email %></p>
  </div>

  <div class="detail-group">
    <label>Role:</label>
    <p><span class="role-badge role-<%= @user.role %>"><%= @user.role.humanize %></span></p>
  </div>

  <div class="detail-group">
    <label>Joined:</label>
    <p><%= @user.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
  </div>

  <div class="detail-group">
    <label>Last Updated:</label>
    <p><%= @user.updated_at.strftime("%B %d, %Y at %I:%M %p") %></p>
  </div>
</div>

<div class="user-actions">
  <%= link_to "Edit User", edit_admin_user_path(@user), class: "btn btn-primary" %>
  <% unless @user == current_user %>
    <%= link_to "Delete User", admin_user_path(@user), method: :delete, 
        class: "btn btn-danger", 
        confirm: "Are you sure you want to delete this user?" %>
  <% end %>
</div>
