
<div class="page-header">
  <div class="container">
    <h1 class="page-title">Admin Dashboard</h1>
    <p class="page-subtitle">Welcome to the Event Management System</p>
  </div>
</div>

<div class="container">
  <div class="card-grid card-grid-2 mb-4">
    <div class="dashboard-stat-card">
      <div class="stat-icon"><i class="fas fa-users"></i></div>
      <div class="card-title">Attendee Users</div>
      <div class="stat-number"><%= User.where(role: 'attendee').count %></div>
      <div class="card-subtitle">Total registered attendees</div>
      <div class="card-footer">
        <%= link_to "Manage Users", admin_users_path, class: "btn btn-primary btn-small" %>
      </div>
    </div>
    <div class="dashboard-stat-card card-orange">
      <div class="stat-icon"><i class="fas fa-ticket-alt"></i></div>
      <div class="card-title">Event Tickets</div>
      <div class="stat-number"><%= Ticket.count %></div>
      <div class="card-subtitle">Total tickets in system</div>
      <div class="card-footer">
        <%= link_to "Manage Tickets", admin_tickets_path, class: "btn btn-primary btn-small" %>
      </div>
    </div>
    <% if Rails.env.development? %>
      <div class="dashboard-stat-card card-green">
        <div class="stat-icon"><i class="fas fa-cogs"></i></div>
        <div class="card-title">Check Environment Variables AND User API Documentation</div>
        <div class="stat-number"></div>
        <div class="card-subtitle">View configuration settings and API documentation</div>
        <div class="card-footer">
          <%= link_to "View Variables", admin_environment_variables_path, class: "btn btn-primary btn-small" %>
        </div>
      </div>
  <% end %>
  </div>
</div>