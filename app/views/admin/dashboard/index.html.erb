
<div class="page-header">
  <div class="container">
    <h1 class="page-title">Admin Dashboard</h1>
    <p class="page-subtitle">Welcome to the Event Management System</p>
  </div>
</div>

<div class="container">
  <div class="card-grid card-grid-2 mb-4">
    <div class="dashboard-stat-card">
      <div class="stat-icon"><i class="fas fa-users"></i></div>
      <div class="card-title">Attendee Users</div>
      <div class="stat-number"><%= User.where(role: 'attendee').count %></div>
      <div class="card-subtitle">Total registered attendees</div>
      <div class="card-footer">
        <%= link_to "Manage Users", admin_users_path, class: "btn btn-primary btn-small" %>
      </div>
    </div>
    <div class="dashboard-stat-card card-orange">
      <div class="stat-icon"><i class="fas fa-ticket-alt"></i></div>
      <div class="card-title">Event Tickets</div>
      <div class="stat-number"><%= Ticket.count %></div>
      <div class="card-subtitle">Total tickets in system</div>
      <div class="card-footer">
        <%= link_to "Manage Tickets", admin_tickets_path, class: "btn btn-primary btn-small" %>
      </div>
    </div>
  </div>

  <div class="system-overview-section mb-4">
    <div class="section-header">
      <div class="section-title">System Overview</div>
      <div class="section-subtitle">Key metrics and performance indicators</div>
    </div>
    <div class="stats-grid">
      <div class="mini-stat-card">
        <div class="mini-stat-icon"><i class="fas fa-user"></i></div>
        <div class="mini-stat-content">
          <div class="mini-stat-number"><%= User.count %></div>
          <div class="mini-stat-label">Total Users</div>
        </div>
      </div>
      <div class="mini-stat-card">
        <div class="mini-stat-icon"><i class="fas fa-tags"></i></div>
        <div class="mini-stat-content">
          <div class="mini-stat-number"><%= TicketStatus.count %></div>
          <div class="mini-stat-label">Ticket Statuses</div>
        </div>
      </div>
      <div class="mini-stat-card">
        <div class="mini-stat-icon"><i class="fas fa-user-shield"></i></div>
        <div class="mini-stat-content">
          <div class="mini-stat-number"><%= User.where(role: 'admin').count %></div>
          <div class="mini-stat-label">Admin Users</div>
        </div>
      </div>
    </div>
  </div>
</div>