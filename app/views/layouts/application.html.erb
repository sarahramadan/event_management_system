<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Event Management System</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="app-layout">
    <!-- Flash Messages -->
    <% if notice %>
      <div class="flash-message flash-notice">
        <div class="container">
          <%= notice %>
        </div>
      </div>
    <% end %>
    <% if alert %>
      <div class="flash-message flash-alert">
        <div class="container">
          <%= alert %>
        </div>
      </div>
    <% end %>

    <!-- Admin Navigation (if admin area) -->
    <% if request.path.start_with?('/admin') %>
      <nav class="admin-navbar">
        <div class="container">
          <div class="navbar-brand">
            <%= link_to "ðŸŽ« Event Management", admin_root_path, class: "brand-link" %>
          </div>
          <div class="navbar-menu">
            <%= link_to "Dashboard", admin_root_path, class: "nav-link #{'active' if current_page?(admin_root_path)}" %>
            <%= link_to "Tickets", admin_tickets_path, class: "nav-link #{'active' if request.path.start_with?('/admin/tickets')}" %>
            <div class="nav-divider"></div>
            <%= link_to "Sign Out", destroy_user_session_path, data: { "turbo-method": :delete }, class: "nav-link logout-link" %>

          </div>
        </div>
      </nav>
    <% end %>

    <!-- Main Content -->
    <main class="main-content">
      <%= yield %>
    </main>

    <!-- Footer -->
    <footer class="app-footer">
      <div class="container">
        <p>&copy; 2025 Event Management System. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>
